{
    "name": "ts-postgres",
    "version": "1.1.1-dev",
    "description": "PostgreSQL client in TypeScript",
    "declaration": true,
    "keywords": [
        "database",
        "postgres",
        "postgresql",
        "rdbms"
    ],
    "homepage": "https://github.com/malthe/ts-postgres",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "author": "Malthe Borch <mborch@gmail.com>",
    "dependencies": {
        "ts-typed-events": "^1.1.1"
    },
    "files": [
        "/dist",
        "/src"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/malthe/ts-postgres.git"
    },
    "license": "MIT",
    "engines": {
        "node": ">=10.7.0"
    },
    "minNativeVersion": "2.3.0",
    "scripts": {
        "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "prebuild": "rimraf dist",
        "build": "tsc",
        "test": "jest --verbose",
        "test:watch": "jest --watch",
        "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/",
            "/src/logging.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 85,
                "lines": 85,
                "statements": 85
            }
        },
        "collectCoverage": true
    },
    "prettier": {
        "semi": true,
        "singleQuote": true
    },
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/node": "^12.6.8",
        "colors": "^1.3.3",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.0",
        "prettier": "^1.18.2",
        "prompt": "^1.0.0",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "^3.5.3"
    }
}
